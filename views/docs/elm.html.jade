              |   )
              |   p.checkbox: +formCheckbox('info', 'Acepto los términos y condiciones', '1')
              |   p: button.button-big Enviar
        div.pane.code
          pre
            code
              | [class*="button"] { .mixButton(); }
              | .button-big { .mixButtonSize(2.4); }
              | form.hform  { .mixFormHorizontal(); }

