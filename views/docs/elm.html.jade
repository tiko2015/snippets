extends ../_layouts/docs

block nav
  .nav-docs
    h2 Snippets
    h4 html base
    +nav('nav-elemetos', config.htmlbase)
    h4 elementos
    ul.nav-activo
      - each item in config.elementos
        li
          a(href=item.anchor)= item.name
    h4 documetos
    +nav('nav-documentos', config.documentos)

  script.
    $('header [href*="docs"]').addClass('active');
    $(function() {
      $("ul.docs-tabs").tabs("> .pane");
    });
block content
  section
    article
      h3(id="formularios") Formularios
      h4 Formulario horizontal
      .panels
        +nav('docs-tabs tabs', 
          [ {link:'#preview', name:"preview"}, 
            {link:'#jade', name:"jade"}, 
            {link:'#less', name:"less"}
          ])
        div.pane
          form.hform
            p: +formInput('text', 'nombre', 'Nombre', '')
            p: +formInput('text', 'email', 'Correo', '')
            p: +formSelect(
              'asunto', 'Pais', [
                {'name':'Argentina','value':'ar'},
                {'name':'Brasil','value':'br'}, 
                {'name':'Uruguay','value':'uy'}
              ]
            )
            p: +formTextarea('Mensaje', 'mensaje', '')
            p.checkbox: +formRadio('sexo', [{'label':'Hombre','value':'h'},{'label':'Mujer','value':'m'}])
            p.checkbox: +formCheckbox('info', 'Acepto los términos y condiciones', '1')
            p: button.button-big Enviar
        div.pane.code
          pre
            code
              | form.hform
              |   p: +formInput('text', 'nombre', 'Nombre', '')
              |   p: +formInput('text', 'email', 'Correo', '')
              |   p: +formSelect(
              |     'asunto', 'Pais', [
              |       {'name':'Argentina','value':'ar'},
              |       {'name':'Brasil','value':'br'}, 
              |       {'name':'Uruguay','value':'uy'}
              |     ]
